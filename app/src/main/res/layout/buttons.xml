<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="6">

        <Button
            android:id="@+id/obrisi"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="C"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:id="@+id/zagrada"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="()"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:id="@+id/procenat"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="%"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:id="@+id/podeljeno"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="/"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="3" />


        <Button
            android:id="@+id/sedam"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="7"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:id="@+id/osam"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="8"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:id="@+id/devet"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="9"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:id="@+id/puta"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="x"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:id="@+id/cetiri"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="4"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:id="@+id/pet"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="5"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:id="@+id/sest"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="6"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="-"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="3" />


        <Button
            android:id="@+id/jedan"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="1"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:id="@+id/dva"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="2"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:id="@+id/tri"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="3"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="+"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:id="@+id/nula"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="0"
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_column="0" />



        <Button
            android:id="@+id/tacka"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="."
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:layout_column="1" />

        <Button
            android:id="@+id/jednako"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="="
            android:fontFamily="@font/g_light"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/orange"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_column="3" />

    </GridLayout>



</RelativeLayout>